<!-- Including components in a layout (layout.hbs) -->
<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <title>{{title}}</title>
      <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
      <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
      <link rel="apple-touch-icon" href="/img/favicon.ico">
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <!-- mettere link di bootstrap, javascript-->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  </head>
  <body class="container-fluid p-0 m-0" onload="initNavBar(), init()">
    <div >
      {{> navbar }}  <!-- Including the Navbar component &ndash-->
      {{#if showSearch}}
          {{> search}}
      {{/if}}

      <main>
          {{{body}}}
      </main>

      {{> footer}}  <!-- Including the Footer component -->
        <script src="Js/index.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </div>
  </body>
</html>
