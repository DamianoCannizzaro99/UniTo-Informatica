{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "Rotten Tomatoes & Oscar Awards API",
    "description": "API for fetching data about Rotten Tomatoes reviews and Oscar Awards",
    "termsOfService": "http://api_url/terms/",
    "contact": {
      "name": "Rotten & Oscar API Team",
      "email": "support@example.com",
      "url": "http://example.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/",
      "description": "Local server"
    }
  ],
  "paths": {
    "/api/dataRotten": {
      "get": {
        "tags": [
          "Rotten Tomatoes"
        ],
        "description": "Fetch a list of Rotten Tomatoes reviews",
        "operationId": "getRottenData",
        "responses": {
          "200": {
            "description": "List of Rotten Tomatoes reviews",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RottenResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/dataOscar": {
      "get": {
        "tags": [
          "Oscar Awards"
        ],
        "description": "Fetch a list of Oscar Awards data",
        "operationId": "getOscarData",
        "responses": {
          "200": {
            "description": "List of Oscar Awards data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OscarResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RottenReview": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the reviewed movie",
            "example": "Inception"
          },
          "rating": {
            "type": "integer",
            "description": "Rating out of 100",
            "example": 87
          },
          "reviewer": {
            "type": "string",
            "description": "Name of the reviewer",
            "example": "John Doe"
          }
        }
      },
      "OscarAward": {
        "type": "object",
        "properties": {
          "year": {
            "type": "integer",
            "description": "Year of the Oscar award",
            "example": 2020
          },
          "category": {
            "type": "string",
            "description": "The category of the award",
            "example": "Best Picture"
          },
          "winner": {
            "type": "string",
            "description": "Name of the winner",
            "example": "Parasite"
          }
        }
      },
      "RottenResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RottenReview"
            }
          }
        }
      },
      "OscarResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OscarAward"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message",
            "example": "An unexpected error occurred"
          },
          "internal_code": {
            "type": "string",
            "description": "Internal error code",
            "example": "SERVER_ERROR"
          }
        }
      }
    }
  }
}
