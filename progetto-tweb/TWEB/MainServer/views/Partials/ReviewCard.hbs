<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-start">
            <div class="review-icon me-3">
                {{#if (eq review_type "Fresh")}}
                    <i class="fas fa-thumbs-up text-success" style="font-size: 1.5em;"></i>
                {{else}}
                    <i class="fas fa-thumbs-down text-danger" style="font-size: 1.5em;"></i>
                {{/if}}
            </div>
            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h5 class="mb-1 text-primary">
                            {{#if critic_name}}{{critic_name}}{{else}}Anonymous Critic{{/if}}
                            {{#if top_critic}}
                                <span class="badge bg-warning ms-2">Top Critic</span>
                            {{/if}}
                        </h5>
                        <div class="text-muted mb-2">
                            {{#if publisher_name}}
                                <i class="fas fa-newspaper me-1"></i>{{publisher_name}}
                            {{/if}}
                            {{#if review_date}}
                                {{#if publisher_name}} â€¢ {{/if}}
                                <i class="fas fa-calendar me-1"></i>{{formatDate review_date}}
                            {{/if}}
                        </div>
                    </div>
                    <span class="badge {{#if (eq review_type 'Fresh')}}bg-success{{else}}bg-danger{{/if}} fs-6">
                        {{#if review_type}}{{review_type}}{{else}}N/A{{/if}}
                    </span>
                </div>
                <div class="review-content">
                    <p class="mb-0 text-dark lh-base">
                        {{#if review_content}}{{review_content}}{{else}}<em class="text-muted">No review content available.</em>{{/if}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
