<div class="container mt-4">
    {{#if topRatedMovies}}
        <div class="row">
            {{#each topRatedMovies}}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100">
                        <img src="{{#if this.posterLink}}{{this.posterLink}}{{else}}img/not_found.png{{/if}}" class="card-img-top" alt="{{this.title}}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.title}} {{#if this.relaseYear}}({{this.relaseYear}}){{/if}}</h5>
                            <p class="text-muted small flex-grow-1">
                                {{#if this.description}}
                                    {{#if (gt this.description.length 100)}}
                                        {{substring this.description 0 100}}...
                                    {{else}}
                                        {{this.description}}
                                    {{/if}}
                                {{else}}
                                    Click for more details
                                {{/if}}
                            </p>
                            <div class="mt-auto">
                                <p class="mb-2">
                                    {{#if this.rating}}
                                        {{{generateStars this.rating}}} {{this.rating}}
                                    {{else}}
                                        <span class="text-muted">No rating</span>
                                    {{/if}}
                                </p>
                                <a href="/FilmScheda?id={{this.id}}" class="btn btn-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="row" id="movies-container">
            <!-- Fallback: JavaScript will populate this if no server data -->
        </div>
    {{/if}}
</div>
